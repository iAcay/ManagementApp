<%- model_class = Project -%>
<div class='page-header'>
  <h1 class='text-center'><%= model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class='table table-stripper'>
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:details) %></th>
      <th><%= model_class.human_attribute_name(:expected_completion_date) %></th>
      <th colspan='3', class='text-center'>Actions:</th>
    </tr>
  </thead>
  <tbody>
    <% projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project_path(project) %></td>
        <td><%= project.title %></td>
        <td><%= project.details %></td>
        <td><%= project.expected_completion_date %></td>
        <td><%= link_to 'Add member to project', project_path(project), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Delete', project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>
