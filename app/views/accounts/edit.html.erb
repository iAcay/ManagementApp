<%= form_with model: account  do |f| %>
  <div class='form-group mt-3'>
    <% account.errors.each do |error| %>
      <li><strong><%= error.full_message %></strong></li>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :organization_name %>
    <%= f.text_field :name, autofocus: true, required: true, class: 'form-control', placeholder: 'Organization Name' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= button_to 'Delete organization', account_path(account), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
